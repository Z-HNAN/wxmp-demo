.top{
  background-color: #00A1DD;
}
.top image{
  width: 60rpx;
  height: 60rpx;
  margin-left: 5%;
  margin-top: 20rpx;
}
.content{
  width: 80%;
  margin: 0 auto;
}
.cell_content {
  width:100%;
  
  /* 建议取消，体验好*/
  /* height:100vh; */

  /*弹性布局*/
  display:flex;
  /*横向布局*/
  flex-direction:row;
  /* 超出后自动换行*/
  flex-wrap: wrap;
  margin-top: 10px;
  background-color: white;
  padding-top: 5px;
}
.list-box-wrap{
  box-sizing: border-box;
  /* 等高布局 */
  display: flex;
  align-item: stretch;
  padding: 20rpx;
  width: 50vw;
  position: relative;
}

.list{
  width: 100%;
  height: auto;
  border-bottom:1px  solid #dddddd;
  font-size: 35rpx;
  line-height: 35rpx;
  color: #989898;
}
.list_title{
  margin: 40rpx  0 20rpx 0;
  font-size: 40rpx;
  color: #282828;
}
.list_subject{
  margin: 40rpx  0 20rpx 0;
  font-size: 40rpx;
  color: #282828;
}

.time{
  font-size: 30rpx;
  line-height: 20rpx;
  color: #4395FF;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}
.list_info{
  height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}
.more_info{
  height: auto !important;
  overflow: auto !important;
  text-overflow: normal !important;
   display: block;
  -webkit-line-clamp: none;
  -webkit-box-orient: vertical;
  align-content: center;
}
.hide{
 display: -webkit-box;
}
.show{
  height: auto !important;
  overflow: auto !important;
  text-overflow: normal !important;
   display: block;
  -webkit-line-clamp: none;
  -webkit-box-orient: vertical;
  align-content: center;
}

.down{
  display: block;
  width: 50rpx;
  height: 40rpx;
  margin: 20rpx auto;
}

.line_down{
  margin-top: 50rpx;
  margin-right: 5%
}