  padding-top: 5px;
}

.body-left{

  text-align:center;
  flex:1;
  padding-left: 5px;
  /* padding-top: 5px; */
  padding-bottom: 5px;
  /* background-color: #000; */
}
.body-right{

  text-align:center;
  flex:1;
  /* background-color: #000; */
  padding-right: 5px;
  /* padding-top: 5px; */
  padding-bottom: 5px;

}

.list{
  width: 100%;
  height: auto;
  border-bottom:1px  solid #dddddd;
  font-size: 35rpx;
  line-height: 35rpx;
  color: #989898;
}
.list_title{
  margin: 40rpx  0 20rpx 0;
  font-size: 40rpx;
  color: #282828;
}
.list_subject{
  margin: 40rpx  0 20rpx 0;
  font-size: 40rpx;
  color: #282828;
}

.time{
  font-size: 30rpx;
  line-height: 20rpx;
  color: #4395FF;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
}
.list_info{
  height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}
.more_info{
  height: auto !important;
  overflow: auto !important;
  text-overflow: normal !important;
   display: block;
  -webkit-line-clamp: none;
  -webkit-box-orient: vertical;
  align-content: center;
}
.hide{
 display: -webkit-box;
}
.show{
  height: auto !important;
  overflow: auto !important;
  text-overflow: normal !important;
   display: block;
  -webkit-line-clamp: none;
  -webkit-box-orient: vertical;
  align-content: center;
}

.down{
  display: block;
  width: 50rpx;
  height: 40rpx;
  margin: 20rpx auto;
}

.line_down{
  margin-top: 50rpx;
  margin-right: 5%
