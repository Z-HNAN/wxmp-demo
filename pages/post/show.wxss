/* pages/post/show.wxss */
.divLine_row{
  margin: 0 auto;
  background: #00A1D6;
  width: 80%;
  height: 2rpx;
  display: flex;
  margin-top: 20px;
}

#button{
  width: 100%;
  height: 120px;
  display: flex;
}

#button button{
  margin-top: 25px;
  margin-bottom: 30px;
  width: 100px;
  height: 50px;
}

.head{
  border-right: 1px solid #0099cc;
}

.head image{
  width: 90px;
  height: 90px;
  border: 1px solid gray;
  margin:20px 20px 0px 35px;
}

.my_head{
  display: flex;
}

.head_info > view{
  margin-left: 20px;
  margin-top: 10px;
  height: 30px;
  color: #55743e;
  width: 120px;
}

.main{
  margin-top:50px;
  height: 250px
}

.main navigator{
  height: 30px;
  margin: 15px 0px 10px 30px ;
  padding-top: 10px;
  border-bottom: 1px solid #00A1D6;
  width:80%;
  color: #55743e;
}



.main navigator image{
  padding-right: 5px;
  width: 20px;
  height: 20px;
  float: right;
}
