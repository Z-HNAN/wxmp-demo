<form bindsubmit="formSubmit" bindreset="formReset">
  <view>
    <view>姓名：</view>
    <input name="name" type="text" placeholder="请输入你的姓名"/>
  </view>

  <view>
    <view>学校：</view>
    <input name="school" type="text" placeholder="请输入你的学校"/>
  </view>

  <view>
    <view>学院：</view>
    <input name="institute" type="text" placeholder="请输入你的学校"/>
  </view>

  <view>
    <view>学号：</view>
    <input name="number" type="text" placeholder="请输入你的学号" />
  </view>

  <view>
    <view>班级：</view>
    <input name="class" type="text" placeholder="请输入你的班级" />
  </view>
  <view>
    <button form-type="submit">确认</button>
    <button form-type="reset">重置</button>
  </view>
</form>